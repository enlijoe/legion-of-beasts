# Example values. Copy to .env and edit for your environment.

# Host paths for each BDS data directory (the left side of your docker-compose volume mounts)
BDS_DEV_DATA="/opt/minecraft/dev/data"
BDS_TEST_DATA="/opt/minecraft/test/data"
BDS_PROD_DATA="/opt/minecraft/prod/data"

# World folder names inside each data dir
DEV_WORLD="DevWorld"
TEST_WORLD="TestWorld"
PROD_WORLD="ProdWorld"

# Optional container names (match what you used in docker-compose)
DEV_CONTAINER="minecraft-dev"
TEST_CONTAINER="minecraft-test"
PROD_CONTAINER="minecraft-prod"
